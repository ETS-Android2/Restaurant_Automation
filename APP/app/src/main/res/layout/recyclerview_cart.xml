<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/remove_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_clear_black_24dp"
                android:layout_alignParentRight="true"
                android:padding="7dp"/>

            <TextView
                android:id="@+id/textView_itemName_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="Menu Name"
                android:textSize="17sp"
                />
            <LinearLayout
                android:layout_below="@id/textView_itemName_cart"
                android:id="@+id/linearLayoutCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/textView_itemPrice_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_itemName_cart"
                android:text="Menu Price"
                android:textSize="17sp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_clear_black_24dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>

                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/buttonMinusCapacityItem"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_drawable"
                    android:textColor="@android:color/white"
                    android:text="-"
                    android:textSize="20dp"
                    />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textviewcapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="#00131313"
                    android:text="0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/buttonPlusCapacityItem"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_drawable"
                    android:textColor="@android:color/white"
                    android:text="+"
                    android:textSize="20dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_drag_handle_black_24dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/textView_totalItemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="200$"
                    android:textSize="19sp"
                    />

            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>